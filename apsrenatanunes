function fVerificarPrimo(num){
    if(num<2){
        return false;
    }//if
 
    for(let i=num-1; i>=2;i--){
        let resto = num % i;
        if(resto == 0){
            return false;
        }//if
    }//for
    return true;
}
 
function fImprimir_K_Maiores_Primos(num, qtde){
    let contador = 0;
    for(let i=num; i>=2; i--){
        let ehPrimo = fVerificarPrimo(i);
        if(ehPrimo){
            console.log("O número ["+i +"] é primo!");
            contador++;
            if(contador==qtde){
                return;
            }//if
        }//if
    }//for
 
}
 
let numero = parseInt(prompt("digite um numero neste campo:"));
let qtdePrimos = parseInt(prompt("digite a quantidade maxima de numeros primos que quer ver:"));
fImprimir_K_Maiores_Primos(numero, qtdePrimos);
